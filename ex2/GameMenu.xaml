<Window x:Class="ex2.Gamename"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex2"
        mc:Ignorable="d"
        Title="Gamename" Height="200" Width="300" Closed="Window_Closed">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="GameMenu.jpg"/>
        </Grid.Background>
        
        <WrapPanel>
            <TextBlock Text="Game Name:  " FontWeight="Bold" FontFamily="David" />
            <TextBox Name="Game_name" Width="150" VerticalAlignment="Center" />
        </WrapPanel>
        <Button Name="bntCnt" Content="Next ->" Click="bntCnt_Click" VerticalAlignment="Bottom">
        <Button.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFFFD190" Offset="0.5"/>
                <GradientStop  Color="Orange" Offset="0.85"/>
                <GradientStop Color="#FFFFD190" Offset="1"/>
            </LinearGradientBrush>
        </Button.Background>
        </Button>
    </Grid>
</Window>
