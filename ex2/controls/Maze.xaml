<UserControl x:Class="ex2.controls.Maze"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ex2.controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="mazeGrid">
        <Grid.Background>
            <SolidColorBrush Color="Aqua">
            </SolidColorBrush>
        </Grid.Background>
        <Rectangle x:Name="player" Grid.Column="{Binding VM_MyRow}" Grid.Row="{Binding VM_MyRow}">
            <Rectangle.Fill>
                <ImageBrush ImageSource="runMan.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle x:Name="end" Grid.Column="{Binding VM_EndRow}" Grid.Row="{Binding VM_EndRow}">
            <Rectangle.Fill>
                <ImageBrush ImageSource="endMaze.png"/>
            </Rectangle.Fill>
        </Rectangle>
    </Grid>
</UserControl>
