<Window x:Class="ex2.Warning"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ex2"
        mc:Ignorable="d"
        Title="Warning" Height="300" Width="300">
    <Grid Name="GridWarning" >
        <Grid.Background>
            <ImageBrush ImageSource="waiting.jpg"/>
        </Grid.Background>
        <Label x:Name="label" TextBlock.Foreground="White" FontFamily="Cooper Black"  TextBlock.FontSize="20" VerticalAlignment='Top' HorizontalAlignment="Center" Margin="20" RenderTransformOrigin="0.551,1.784"/>

    </Grid>
</Window>
