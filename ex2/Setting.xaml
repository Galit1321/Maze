<Window x:Class="View.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Setting" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF0FBBAB" Offset="0.094"/>
            </RadialGradientBrush>
        </Grid.Background>

        <TextBox x:Name="IP" TextChanged="TextBox_TextChanged" HorizontalAlignment="Center" Height="25" Margin="85,51,87,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextBlock.FontSize="14"/>
        <WrapPanel Margin="0,10">
            <TextBlock   Text="Port1: " FontWeight="Bold" Foreground="White" Height="30" Width="44"/>
            <TextBox Text="{Binding Path=Port1, UpdateSourceTrigger=PropertyChanged}" Width="150" TextChanged="TextBox_TextChanged_1" />
        </WrapPanel>
           
        <Label x:Name="IPlbl" Content="IP " FontFamily="Cooper Black" HorizontalAlignment="Center" TextBlock.Foreground="White" Margin="22,51,238,0" VerticalAlignment="Top" Width="32"/>
        <Label x:Name="Portlb" FontFamily="Cooper Black" Content="Port"  HorizontalAlignment="center" Margin="22,147,225,92" VerticalAlignment="Center" RenderTransformOrigin="0.072,0.479" TextBlock.TextAlignment="Center" TextBlock.Foreground="White" TextBlock.FontSize="14" Height="30" Width="45"/>
        <TextBox x:Name="Port" TextChanged="TextBox_TextChanged" HorizontalAlignment="Center" Height="26" Margin="85,152,87,91" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" TextBlock.FontSize="14"/>

        <Button x:Name="Save" Content="Save" HorizontalAlignment="Left" Margin="50,218,50,20" VerticalAlignment="Bottom" Width="75">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFD190" Offset="0.2"/>
                    <GradientStop  Color="Orange" Offset="0.85"/>
                    <GradientStop Color="#FFFFD190" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="Cancel" Content="Cancel" HorizontalAlignment="Right" Margin="50,218,50,20" VerticalAlignment="Bottom" Width="75" RenderTransformOrigin="-0.29,-0.9">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFFFD190" Offset="0.2"/>
                    <GradientStop  Color="Orange" Offset="0.85"/>
                    <GradientStop Color="#FFFFD190" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
